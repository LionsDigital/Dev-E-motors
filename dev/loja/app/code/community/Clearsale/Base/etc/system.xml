<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <clearsale translate="label" module="clearsale_base">
            <label>Clearsale</label>
            <sort_order>1</sort_order>
        </clearsale>
    </tabs>
    <sections>
        <clearsale_setting_base translate="label" module="clearsale_base">
            <label>Base</label>
            <tab>clearsale</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <clearsale_settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <environment translate="label comment">
                            <label>Environment</label>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_environment</source_model>
                            <comment><![CDATA[<strong>Staging = </strong>Developer/Staging Environment<br/><strong>Production = </strong>Production Environment]]></comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </environment>
                        <production_api_key translate="label">
                            <label>Cod Integration ClearSale Production</label>
                            <comment>Integration Cod ClearSale Production</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><environment>production</environment></depends>
                        </production_api_key>

                        <production_api_password translate="label">
                            <label>Integration Password ClearSale Production</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>41</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><environment>production</environment></depends>
                        </production_api_password>

                        <staging_api_key translate="label">
                            <label>Cod Integration ClearSale Staging</label>
                            <comment>Integration Cod ClearSale Staging</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><environment>staging</environment></depends>
                        </staging_api_key>

                        <staging_api_password translate="label">
                            <label>Integration Password ClearSale Staging</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>41</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><environment>staging</environment></depends>
                        </staging_api_password>

                        <clearsale_log>
                            <label>Enable Log</label>
                            <comment><![CDATA[The log will be saved as <strong>"clearsale.log"</strong>]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>42</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearsale_log>
                        <default_taxvat_field>
                            <label>CPF/CNPJ attribute</label>
                            <comment>Select the attribute that is linked to the customer's CPF</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_taxVat</source_model>
                            <sort_order>43</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_taxvat_field>
                    </fields>
                </clearsale_settings>
                <clearsale_mapping_address>
                    <label>Mapping (Street, Number, Complemento, Neighborhood)</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <clearsale_mapping_address_street>
                            <label>Street</label>
                            <comment>If no option is selected, the default value of the magento will be used</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_address</source_model>
                            <sort_order>43</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearsale_mapping_address_street>
                        <clearsale_mapping_address_number>
                            <label>Number</label>
                            <comment>If no option is selected, the default value of the magento will be used</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_address</source_model>
                            <sort_order>44</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearsale_mapping_address_number>
                        <clearsale_mapping_address_complemento>
                            <label>Complemento</label>
                            <comment>If no option is selected, the default value of the magento will be used</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_address</source_model>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearsale_mapping_address_complemento>
                        <clearsale_mapping_adress_neighborhood>
                            <label>Neighborhood</label>
                            <comment>If no option is selected, the default value of the magento will be used</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_address</source_model>
                            <sort_order>46</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearsale_mapping_adress_neighborhood>
                    </fields>
                </clearsale_mapping_address>
                <clearsale_filters>
                    <label>Filters</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <clearsale_payment_methods_cc>
                            <label>Payment by credit card</label>
                            <comment>Method used for credit card payments</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_payment</source_model>
                            <sort_order>47</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearsale_payment_methods_cc>
                        <clearsale_payment_methods_cartao_debito>
                            <label>Payment by debit card</label>
                            <comment>Method used for debit card payments</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_payment</source_model>
                            <sort_order>48</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearsale_payment_methods_cartao_debito>
                        <clearsale_payment_methods_boleto>
                            <label>Payment by boleto</label>
                            <comment>Method used for boleto payments</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_payment</source_model>
                            <sort_order>49</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearsale_payment_methods_boleto>
                        <clearsale_payment_methods_paypal>
                            <label>Payment by paypal</label>
                            <comment>Method used for paypal payments</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_payment</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearsale_payment_methods_paypal>
                        <clearsale_payment_methods_deposito>
                            <label>Payment by deposit payment</label>
                            <comment>Method used for deposit payments</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_payment</source_model>
                            <sort_order>51</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearsale_payment_methods_deposito>
                        <clearsale_payment_methods_transferencia>
                            <label>Payment by bank transfer</label>
                            <comment>Method used for bank transfer</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>clearsale_base/source_payment</source_model>
                            <sort_order>52</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearsale_payment_methods_transferencia>
                    </fields>
                </clearsale_filters>
            </groups>
        </clearsale_setting_base>
    </sections>
</config>